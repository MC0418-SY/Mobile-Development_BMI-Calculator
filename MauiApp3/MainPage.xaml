<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage"
             BackgroundColor="#F0F4F8">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            
            <Frame BackgroundColor="#002060"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="True"
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="BMI Calculator"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#ffd500"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame x:Name="ResultCard"
                   BackgroundColor="White"
                   CornerRadius="20"
                   Padding="25"
                   HasShadow="True"
                   IsVisible="False">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Your Result"
                           FontSize="16"
                           TextColor="#888888"
                           HorizontalTextAlignment="Center"/>

                    <Label x:Name="BmiValueLabel"
                           Text=""
                           FontSize="64"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="#4A90D9"/>

                    <Frame x:Name="CategoryFrame"
                           CornerRadius="12"
                           Padding="15,10"
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <Label x:Name="CategoryLabel"
                               Text=""
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Center"/>
                    </Frame>
                    

                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="25"
                   HasShadow="True">
                <VerticalStackLayout Spacing="20">
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Height (cm)"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333333"/>
                        <Frame BackgroundColor="#F0F4F8"
                               CornerRadius="12"
                               Padding="15,5"
                               HasShadow="False"
                               BorderColor="#D0D8E4">
                            <Entry x:Name="HeightEntry"
                                   Keyboard="Numeric"
                                   FontSize="18"
                                   TextColor="#222222"
                                   PlaceholderColor="#AAAAAA"
                                   BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Weight (kg)"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#333333"/>
                        <Frame BackgroundColor="#F0F4F8"
                               CornerRadius="12"
                               Padding="15,5"
                               HasShadow="False"
                               BorderColor="#D0D8E4">
                            <Entry x:Name="WeightEntry"
                                   Keyboard="Numeric"
                                   FontSize="18"
                                   TextColor="#222222"
                                   PlaceholderColor="#AAAAAA"
                                   BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <Button Text="Calculate BMI"
                            Clicked="OnCalculateClicked"
                            BackgroundColor="#002060"
                            TextColor="#ffd500"
                            FontSize="18"
                            FontAttributes="Bold"
                            CornerRadius="14"
                            HeightRequest="55"
                            Margin="0,5,0,0"/>

                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="25"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="BMI Categories"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           Margin="0,0,0,5"/>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                        <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#AED6F1" CornerRadius="10" Padding="10,8" HasShadow="False">
                            <Label Text="Underweight&#10;&lt; 18.5" FontSize="13" TextColor="Black" HorizontalTextAlignment="Center"/>
                        </Frame>
                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#A9DFBF" CornerRadius="10" Padding="10,8" HasShadow="False">
                            <Label Text="Normal&#10;18.5 – 24.9" FontSize="13" TextColor="Black" HorizontalTextAlignment="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#FAD7A0" CornerRadius="10" Padding="10,8" HasShadow="False">
                            <Label Text="Overweight&#10;25 – 29.9" FontSize="13" TextColor="Black" HorizontalTextAlignment="Center"/>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#F1948A" CornerRadius="10" Padding="10,8" HasShadow="False">
                            <Label Text="Obese&#10;≥ 30" FontSize="13" TextColor="Black" HorizontalTextAlignment="Center"/>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
